-- Criação do banco de dados
CREATE DATABASE petcontrol;

-- Conectar ao banco de dados
\c petcontrol;

-- Tabela de Produtos
CREATE TABLE produtos (
    id SERIAL PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    preco DECIMAL(10, 2) NOT NULL,
    quantidade INT NOT NULL,
    data_cadastro DATE NOT NULL DEFAULT CURRENT_DATE,
    data_vencimento DATE
);

-- Tabela de Funcionários
CREATE TABLE funcionarios (
    id SERIAL PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    endereco VARCHAR(255),
    telefone VARCHAR(20),
    cargo VARCHAR(100),
    data_contratacao DATE NOT NULL DEFAULT CURRENT_DATE
);

-- Tabela de Vendas
CREATE TABLE vendas (
    id SERIAL PRIMARY KEY,
    produto_id INT REFERENCES produtos(id),
    quantidade INT NOT NULL,
    total DECIMAL(10, 2) GENERATED ALWAYS AS (quantidade * (SELECT preco FROM produtos WHERE produtos.id = produto_id)) STORED,
    data_venda DATE NOT NULL DEFAULT CURRENT_DATE
);

-- Tabela de Compras
CREATE TABLE compras (
    id SERIAL PRIMARY KEY,
    produto_id INT REFERENCES produtos(id),
    quantidade INT NOT NULL,
    data_compra DATE NOT NULL DEFAULT CURRENT_DATE
);

-- Tabela de Controle Financeiro
CREATE TABLE controle_financas (
    id SERIAL PRIMARY KEY,
    tipo VARCHAR(50) NOT NULL, -- 'receita' ou 'despesa'
    valor DECIMAL(10, 2) NOT NULL,
    data TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

